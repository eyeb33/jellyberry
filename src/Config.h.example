// Config.h.example - Copy this to Config.h and fill in your credentials
#ifndef CONFIG_H
#define CONFIG_H

// WiFi Configuration
#define WIFI_SSID "your-wifi-ssid"
#define WIFI_PASSWORD "your-wifi-password"

// Gemini API Configuration
#define GEMINI_API_KEY "your-gemini-api-key"  // Get from Google AI Studio
#define GEMINI_WS_HOST "generativelanguage.googleapis.com"
#define GEMINI_WS_PORT 443
#define GEMINI_MODEL "models/gemini-2.5-pro-exp-11-05"

// GPIO PIN ASSIGNMENTS - ESP32-S3
// Microphone I2S (INMP441)
#define I2S_MIC_SCK_PIN 8
#define I2S_MIC_WS_PIN 9
#define I2S_MIC_SD_PIN 10

// Speaker I2S (MAX98357A) 
#define I2S_SPEAKER_LRC_PIN 5
#define I2S_SPEAKER_BCLK_PIN 6
#define I2S_SPEAKER_DIN_PIN 7

// LED Strip (WS2812B)
#define LED_DATA_PIN 1

// Touch Sensors (TTP223)
#define TOUCH_PAD_START_PIN 3
#define TOUCH_PAD_STOP_PIN 4

// Audio Configuration
#define AUDIO_SAMPLE_RATE 16000
#define AUDIO_BITS 16
#define AUDIO_CHANNELS 1
#define AUDIO_BUFFER_SIZE 4096
#define MAX_AUDIO_BUFFER_SIZE 32768
#define SPEAKER_SAMPLE_RATE 24000

// PCM Streaming Configuration (no codec - raw PCM)
// Mic: 16-bit PCM @ 16kHz mono → server
// Speaker: 16-bit PCM @ 24kHz mono ← server
#define PCM_CHUNK_SIZE 1920  // 960 samples * 2 bytes = 40ms at 24kHz
#define MIC_FRAME_SIZE 320  // 320 samples @ 16kHz = 20ms chunks for mic recording

// VAD (Voice Activity Detection)
#define VAD_THRESHOLD 700  // Reduced from 1200 for better sensitivity (~40% more sensitive)
#define VAD_SILENCE_MS 1200
#define VAD_CONVERSATION_THRESHOLD 650  // Higher threshold to prevent false triggers from background noise
#define VAD_CONVERSATION_SILENCE_MS 2500  // Longer silence timeout during conversation (more forgiving for natural pauses)

// Conversation Mode
#define CONVERSATION_WINDOW_MS 10000  // 10 second window for follow-up questions
#define THINKING_ANIMATION_DELAY_MS 3500  // Only show rainbow thinking animation after 3.5s delay

// Edge Server Configuration
#define EDGE_SERVER_HOST "192.168.0.xxx"  // Your server IP
#define EDGE_SERVER_PORT 8000
#define EDGE_SERVER_PATH "/ws"
#define DEVICE_ID "esp32-01"

// LED Configuration
#define NUM_LEDS 72  // 6 LED strips × 12 LEDs each
#define LED_BRIGHTNESS 30
#define LED_COLOR_ORDER GRB
#define LED_CHIPSET WS2812B
#define LED_COLUMNS 12
#define LEDS_PER_COLUMN 12

// Recording Configuration
#define MAX_RECORDING_DURATION_MS 10000
#define MIN_RECORDING_DURATION_MS 1000

// WebSocket Configuration
#define WS_RECONNECT_INTERVAL 5000
#define WS_TIMEOUT 30000  // Socket idle timeout - not used by WebSocketsClient lib

// System Constants
#define SERIAL_BAUD_RATE 115200
#define CORE_0 0
#define CORE_1 1

#endif // CONFIG_H
